@model IEnumerable<Lab>;

@{
    ViewData["Title"] = "Lab";
}

@section Styles{
<link rel="stylesheet" href="~/css/lab.css">
}

<div class="container">
    @foreach (Lab lab in Model)
    {
        <div class="lab">
            <div>
                <img src="@Url.Content(lab.ImageUrl)" alt="logo" class="lab-img">
            </div>
            <div>
                <div>Laboratory @lab.Id</div>
                <div>@lab.ItemName</div>
                <a class="view-button" asp-controller="Lab" asp-action="Booking" asp-route-Id="@lab.Id">View</a>
            </div>
        </div>
    }
</div>

@if (TempData["BlackList"] != null && (bool)TempData["BlackList"] == true)
{
    @section Scripts{
<script>alert("You are blacklisted. Please contact the administrator.");</script>
}
    TempData.Clear();
}