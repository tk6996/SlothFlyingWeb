@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SlothFlyingWeb</title>
    <environment names="Development">
        <link rel="stylesheet" href="~/assets/fonts/fontawesome/css/all.css">
    </environment>
    <environment names="Production">
        <link rel="stylesheet" href="~/assets/fonts/fontawesome/css/all.min.css">
    </environment>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/navigation.css" />
    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="filter"></div>
    @{
        string controller = ViewContext.RouteData.Values["Controller"].ToString();
        string action = ViewContext.RouteData.Values["Action"].ToString();
    }
    @if (("User" == controller || "Lab" == controller) && SessionExtensions.GetInt32(Context.Session, "Id") != null)
    {
        <header>
            <nav class="navbar">
                <div class="brand">
                    <img src="~/assets/images/brand.jpg" alt="logo" class="brand-img" />
                    <div class="brand-text">Sloth Flying Lab</div>
                </div>
                <div class="menu">
                    <a id="lab" asp-controller="Lab" asp-action="Index"
                        class='@("Lab" == controller ? "active" : "")'>Lab</a>
                    <a id="booklist" asp-controller="User" asp-action="Booklist"
                        class='@("Booklist" == action ? "active" : "")'>Booklist</a>
                    <a id="profile" asp-controller="User" asp-action="Profile" class='@("Profile" == action ||
                        "EditProfile" == action ? "active" : "")'>Profile</a>
                    <a id="logout" asp-controller="User" asp-action="Logout" class="logout">Logout</a>
                </div>
            </nav>
        </header>
    }
    <main role="main">
        @RenderBody()
    </main>
    @RenderSection("Scripts", required: false)
</body>

</html>
